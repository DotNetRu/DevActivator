{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@dotnetru/core": [
        "./ClientApp/app/core/index"
      ],
      "@dotnetru/shared/*": [
        "./ClientApp/app/shared/*/index",
        "./ClientApp/app/shared/*"
      ],
      "@dotnetru/pages/*": [
        "./ClientApp/app/pages/*/index",
        "./ClientApp/app/pages/*"
      ],
      "@dotnetru/*": [
        "./ClientApp/app/components/*/index",
        "./ClientApp/app/components/*"
      ]
    },
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true, // Workaround for https://github.com/angular/angular/issues/17863. Remove this if you upgrade to a fixed version of Angular.
    "strict": true,
    "noImplicitAny": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "webpack-env"
    ]
  },
  "exclude": [
    "bin",
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}